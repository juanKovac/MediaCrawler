  "version_rules": {
    "major": "重大功能更新或不兼容的API变更",
    "minor": "新功能添加，向后兼容",
    "patch": "Bug修复和小的改进"
  },
  "auto_increment": {
    "enabled": true,
    "commit_types": {
      "feat": "minor",
      "fix": "patch",
      "docs": "patch",
      "style": "patch",
      "refactor": "patch",
      "test": "patch",
      "chore": "patch",
      "breaking": "major"
